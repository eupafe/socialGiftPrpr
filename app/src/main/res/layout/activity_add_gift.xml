<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Authentication.SignUp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/new_gift_title"
        android:textSize="24sp"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:padding="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:id="@+id/profileImage"
                android:src = "@drawable/add_image"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:id="@+id/gift_name"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="@string/name_new_gift"
                android:textColorHint="@color/lavender"
                android:background="@drawable/edittext"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:id="@+id/gift_priority"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="@string/priority_new_gift"
                android:textColorHint="@color/lavender"
                android:background="@drawable/edittext"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:id="@+id/gift_link"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="@string/link_new_gift"
                android:textColorHint="@color/lavender"
                android:background="@drawable/edittext"/>

            <Button
                android:id="@+id/save_button"
                android:layout_width="139dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/save_new_gift"
                android:textColorHint="@color/lavender"
                android:textSize="18sp"
                app:cornerRadius="15dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>